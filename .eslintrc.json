{
  "plugins": [
    "styled-components-a11y"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:styled-components-a11y/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "root": true,
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.4.2"
    }
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
      "node": true,
      "es6": true,
      "browser": true
  },
  "rules": {
    "no-unused-vars":"off",
    "no-console":"off",
    "prefer-const": "error",
    "no-var": "error",
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": ["error", 2],
    "react/prop-types": [0]
  }
}
